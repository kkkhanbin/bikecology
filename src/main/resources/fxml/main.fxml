<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane stylesheets="@../css/style.css" prefWidth="900" prefHeight="600"
            style="-fx-background-color: #ffffff;">

   <!-- Header -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f8f8;">
         <padding>
            <Insets top="30" right="30" bottom="30" left="30" />
         </padding>
         <Label text="Minimal Dashboard" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50;" />
      </HBox>
   </top>

   <!-- Sidebar -->
   <left>
      <VBox spacing="10" style="-fx-background-color: #f4f4f4;" prefWidth="200">
         <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: #2c3e50;" />
         <Button text="Analytics" style="-fx-background-color: transparent; -fx-text-fill: #2c3e50;" />
         <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #2c3e50;" />
      </VBox>
   </left>

   <!-- Main Content -->
   <center>
      <VBox alignment="TOP_CENTER" spacing="30">
         <Label text="Welcome to your dashboard" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50;" />

         <HBox spacing="20">
            <VBox style="-fx-background-color: #ecf0f1; -fx-background-radius: 6;" spacing="10" prefWidth="200">
               <Label text="Users" style="-fx-font-size: 16px;" />
               <Label text="1245" style="-fx-font-size: 20px; -fx-text-fill: #27ae60;" />
            </VBox>

            <VBox style="-fx-background-color: #ecf0f1; -fx-background-radius: 6;" spacing="10" prefWidth="200">
               <Label text="Sales" style="-fx-font-size: 16px;" />
               <Label text="13450" style="-fx-font-size: 20px; -fx-text-fill: #2980b9;" />
            </VBox>
         </HBox>

         <Button text="Refresh Data" style="
                -fx-background-color: #2c3e50;
                -fx-text-fill: white;
                -fx-padding: 10 20;
                -fx-background-radius: 4;" />
      </VBox>
   </center>

</BorderPane>
